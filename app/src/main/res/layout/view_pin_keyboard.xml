<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryBackground"
    tools:context=".ui.pin.PinKeyboardView"
    >

    <Button
        android:id="@+id/btn_login_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_2"
        android:text="1"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_login_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_3"
        android:text="2"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_login_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="3"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_5"
        android:text="4"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_login_4"
        app:layout_constraintStart_toEndOf="@+id/btn_login_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_6"
        android:text="5"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_login_4"
        app:layout_constraintStart_toEndOf="@+id/btn_login_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="6"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_8"
        android:text="7"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_login_7"
        app:layout_constraintStart_toEndOf="@+id/btn_login_7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_6"
        android:text="8"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_login_7"
        app:layout_constraintStart_toEndOf="@+id/btn_login_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="9"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login_8"
        app:layout_constraintStart_toStartOf="@id/btn_login_8"
        android:text="0"
        android:textSize="32dp"
        />

    <Button
        android:id="@+id/btn_login_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_login_0"
        app:layout_constraintStart_toStartOf="@+id/btn_login_9"
        android:text="@string/login_delete_text"
        android:textSize="32dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
