<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_view_width"
    android:layout_height="@dimen/card_view_height"
    android:layout_marginEnd="@dimen/big_padding"
    android:layout_marginTop="@dimen/sm_padding"
    app:cardCornerRadius="@dimen/sm_padding"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="@dimen/st_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_acc_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card"
        >

        <FrameLayout
            android:id="@+id/home_acc_label"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home_acc_name"
            style="@style/textBlackShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_st_numbers"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/home_acc_balance"
            app:layout_constraintStart_toEndOf="@+id/home_acc_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/home_title_acc_name"
            />

        <TextView
            android:id="@+id/home_acc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/home_acc_name"
            android:layout_marginEnd="@dimen/big_padding"
            android:textColor="@color/colorTextWhite"
            app:layout_constraintBaseline_toBaselineOf="@+id/home_acc_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/home_title_acc_type"
            />

        <TextView
            android:id="@+id/home_acc_balance"
            style="@style/textBlackShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_big_numbers"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/home_acc_name"
            app:layout_constraintTop_toBottomOf="@+id/home_acc_name"
            tools:text="@string/home_title_acc_balance"
            />

        <TextView
            android:id="@+id/home_acc_symbol"
            style="@style/textBlackShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sm_padding"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_big_numbers"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/home_acc_balance"
            app:layout_constraintTop_toTopOf="@+id/home_acc_balance"
            tools:text="@string/currency_ruble_symbol"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
