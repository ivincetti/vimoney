<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/st_padding"
    android:minHeight="@dimen/icon_st_size"
    app:cardCornerRadius="@dimen/sm_padding"
    app:cardElevation="@dimen/sm_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_transactions_image"
            android:layout_width="@dimen/icon_st_size"
            android:layout_height="@dimen/icon_st_size"
            android:src="@drawable/ic_monetization_black"
            android:textColor="@color/colorTextWhite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/st_padding"
                android:paddingEnd="@dimen/st_padding">

                <TextView
                    android:id="@+id/home_transactions_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/home_title_acc_type"
                    android:textColor="@color/colorTextMain"
                    android:gravity="bottom"
                    tools:text="Кузина" />

                <TextView
                    android:id="@+id/home_transactions_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textColor="@android:color/darker_gray"
                    tools:text="2019-02-15" />
            </LinearLayout>


            <TextView
                android:id="@+id/home_transactions_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_st_numbers"
                android:textStyle="bold"
                tools:text="10000" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>