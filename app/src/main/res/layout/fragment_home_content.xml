<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/home_balance_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_balance" />

        <TextView
            android:id="@+id/home_user_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_balance_string"
            android:text="@string/home_title_balance_sum"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_big_numbers"
            android:textStyle="bold"
            tools:text="10000" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_cards_recycle_view"
        android:layout_marginStart="@dimen/big_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>