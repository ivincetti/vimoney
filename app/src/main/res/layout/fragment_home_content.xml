<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/colorBackgroundDark"
    >

    <!--Заголовок Счетов-->
    <LinearLayout
        android:id="@+id/home_accounts_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_padding"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_st_numbers"
            android:textStyle="bold"
            android:text="@string/home_accounts_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorSecondaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/st_padding"
            android:paddingEnd="@dimen/st_padding"
            android:text="@string/home_fragment_link_to_all_title"
            />

    </LinearLayout>

    <!--Список карт-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_cards_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_padding"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cards_list"
        tools:itemCount="3"
        />

    <!--Заголовок статистики-->
    <LinearLayout
        android:id="@+id/home_stat_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/home_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_st_numbers"
            android:textStyle="bold"
            tools:text="@string/home_fragment_stat_month_sample"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorSecondaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/st_padding"
            android:paddingEnd="@dimen/st_padding"
            android:text="@string/home_fragment_link_to_all_title"
            />

    </LinearLayout>

    <include layout="@layout/stat_income_expense" />

    <!--Заголовок транзакций-->
    <LinearLayout
        android:id="@+id/home_transactions_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_padding"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_st_numbers"
            android:textStyle="bold"
            android:text="@string/history_title_home"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorSecondaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/st_padding"
            android:paddingEnd="@dimen/st_padding"
            android:text="@string/home_fragment_link_to_all_title"
            />

    </LinearLayout>

    <!--Список транзаций-->
    <FrameLayout
        android:id="@+id/main_history_container_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_history_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

    </FrameLayout>

</LinearLayout>
