<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/colorBackgroundDark"
    >

    <!--блок комментария-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_comment_dark"
            />

        <EditText
            android:id="@+id/add_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/add_desc_sample"
            android:textColorHint="@color/colorSecondaryTextDark"
            android:inputType="text"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimaryTextDark"
            android:fontFamily="sans-serif-medium"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_date_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_calendar_dark"
            />

        <TextView
            android:id="@+id/add_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/big_padding"
            android:textColor="@color/colorPrimaryTextDark"
            android:fontFamily="sans-serif-medium"
            tools:text="@string/add_date_sample_txt"
            />

    </LinearLayout>

    <Button
        android:id="@+id/add_btn"
        style="@style/mainButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_btn_save"
        />

</LinearLayout>
