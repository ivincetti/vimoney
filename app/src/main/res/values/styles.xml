<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="colorBackground" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorBackground</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/big_padding</item>
        <item name="srcCompat">@drawable/ic_add_white</item>
        <item name="tint">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textBlackShadow">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
